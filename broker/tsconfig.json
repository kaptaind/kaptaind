{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "build",
      "strictNullChecks": false,
      "sourceMap": true,
      "target": "es2015"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "**/*.spec.ts",
      "node_modules",
      "src/ui"
    ]
  }